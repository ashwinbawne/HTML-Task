@model RegistrationPage1.Models.PagingData



<!DOCTYPE html>

<html lang="en">

<head>



    <meta charset="utf-8">

    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Example of Bootstrap 3 Simple Tables</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <style type="text/css">

        .bs-example {
            margin: 20px;
        }

    </style>



</head>

<body>

    <div class="pagination">
        @for (int i = 1; i <= Model.TotalRecords; i++)
        {
            <a href="@Url.Action("DisplayEmployeeWithPagination", new { pageNumber = i, pageSize = Model.RecordsPerPage })">@i</a>
        }
    </div><br>
 
 



    <a asp-action="Create" asp-controller="Reg">Register</a>
    <div class="bs-example">

        <table class="table">

            <thead>

                <tr>

                    <th>First Name</th>

                    <th>Last Name</th>

                    <th>Gender</th>

                    <th>DOB</th>

                    <th>Hobbies</th>

                    <th>State</th>

                    <th>City</th>

                    <th>Edit</th>

                    <th>Delete</th>

                </tr>

            </thead>


            <tbody>

                @foreach (var r in Model.Data)
                {

                    <tr>

                        <td>@r.Firstname</td>

                        <td>@r.Lastname</td>

                        <td>@r.Gender</td>

                        <td>@r.Dateofbirth</td>

                        <td>@r.Hobbies</td>

                        <td>@r.State</td>

                        <td>@r.City</td>

                        <td><a asp-action="Edit" asp-controller="Reg" asp-route-id="@r.Id">Edit</a></td>

                        <td><a asp-action="Delete" asp-controller="Reg" asp-route-id="@r.Id">Delete</a></td>

                    </tr>

                }

            </tbody>



        </table>

    </div>



</body>

</html>
